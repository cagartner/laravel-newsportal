.button-flat {
    box-shadow: none;
    transition-property: background;
    transition-duration: 0.3s;
    background: #3F688D none repeat scroll 0% 0%;
    border: medium none;
    text-shadow: none;
    color: rgb(255, 255, 255);
}

.button-flat:hover{
	background: #3F688D none repeat scroll 0% 0%;
}

i.glyphicon.glyphicon-chevron-up.clickable, i.glyphicon.glyphicon-remove.removepanel.clickable{
	display: none !important;
}

.panel-primary > .panel-heading , input.btn.btn-primary, div.portlet-title, button.btn.btn-primary, a.btn.btn-primary{
    color: #FFF;
    background-color: #3E4F5D;
    border-color: #060606;
}

.alert-warning {
    color: #FFF;
    background-color: #546371;
    border-color: #141312;
}